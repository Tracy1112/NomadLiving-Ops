# Server Configuration
NODE_ENV=development
PORT=5100

# MongoDB Connection
# For local MongoDB: mongodb://localhost:27017/nomadops
# For MongoDB Atlas: Replace with your actual connection string from MongoDB Atlas dashboard
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGO_URL=your_mongodb_connection_string

# JWT Secret Key (minimum 32 characters recommended)
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long

# Cloudinary Configuration
# Sign up at https://cloudinary.com to get these credentials
CLOUD_NAME=your_cloudinary_cloud_name
CLOUD_API_KEY=your_cloudinary_api_key
CLOUD_API_SECRET=your_cloudinary_api_secret

